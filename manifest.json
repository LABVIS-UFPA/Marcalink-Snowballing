{
  "manifest_version": 3,
  "name": "iCipó",
  "version": "1.0",
  "description": "Marca links no Google Scholar e gerencia um projeto de snowballing com dashboard e exportação.",
  "permissions": ["contextMenus", "scripting", "storage", "unlimitedStorage", "downloads", "alarms"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "ICipó",
    "default_popup": "ui/popup.html"
  },
  "options_page": "ui/options.html",
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}